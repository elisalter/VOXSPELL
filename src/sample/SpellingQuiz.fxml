<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SpellingQuizController">
   <top>
      <Text fx:id="submitButton" strokeType="OUTSIDE" strokeWidth="0.0" text="Spelling Quiz Level: X" underline="true" BorderPane.alignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Text>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="please enter word here:">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Text>
            <TextField fx:id="_inputField" onAction="#userInput" onMouseClicked="#textFieldClicked" text="type word here">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" prefWidth="200.0" text="i didn't quite get that...">
                     <HBox.margin>
                        <Insets left="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="_submitButton" mnemonicParsing="false" onAction="#submitButtonPressed" prefWidth="200.0" text="submit">
                     <HBox.margin>
                        <Insets left="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Change voice:">
                     <HBox.margin>
                        <Insets left="60.0" right="10.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="selectVoice" onAction="#voiceChanging" prefHeight="26.0" prefWidth="206.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
